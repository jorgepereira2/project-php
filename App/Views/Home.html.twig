    <script type="application/javascript">
        var c = 0;
        var myTimer;

        function Ligar() {
            document.getElementById("microondas").classList.remove('forno-desligado');
            document.getElementById("microondas").classList.add('forno-ligado');
            myTimer = setInterval(Contador, 1000)
        }

        function Cancelar() {
            clearInterval(myTimer)
        }

        function formataSegundos(s) {
            function duas_casas(numero) {
                if (numero <= 9) {
                    numero = "0" + numero;
                }
                return numero;
            }

            hora = duas_casas(Math.round(s / 3600));
            minuto = duas_casas(Math.round((s % 3600) / 60));
            segundo = duas_casas((s % 3600) % 60);
            formatado = ((hora > 0) ? hora + ":" : '') + minuto + ":" + segundo;
            return formatado;
        }

        function Contador() {
            var total = ++c;
            document.getElementById("timer").innerHTML = total <= 60 ? total : formataSegundos(total);
        }
    </script>
